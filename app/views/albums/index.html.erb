<div class="station-background-default">
    <div class="station-flex">
        <div>
            <%= render 'shared/verticalnavbar' %>
            <%= yield %>
        </div>
        <div>
        <div class="album-index-heading">
            <h1>Make a new album</h1>
            <%= link_to "Make new album", new_album_path, class: "track-edit" %>
        </div>
        <div class="albums-area">
        <% @album.each do |album| %>    
            <div class="track-card">
            <% if album.photo.attached? %>
                <%= cl_image_tag album.photo.key, class: "card-background"%>
                <%= cl_image_tag album.photo.key, class: "", height: 180 %>
            <% end %>
                <div class="album-details">
                    <h2 class="card-header"><%= album.album_title %></h2>
                    <p class="card-subheader"><%= album.album_description %></p>
                        <div class="flex space-between controllers">
                            <i class="fas fa-fast-backward"></i>
                            <i class="fas fa-play"></i>
                            <i class="fas fa-fast-forward"></i>
                        </div>
                    <%= link_to "Edit", album_path(album), class: "track-edit" %>
                </div>
            </div>
            <% end %>
        </div>
    </div>
    </div>

    <div class="fullwidth-player fixed">
        <div class="player-details">
            <div>
                <div class="flex">
                    <div class="image-player">
                        <img class="image-player" src="https://images.unsplash.com/photo-1531278520962-fcf47a2faea2?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=2989&q=80">
                    </div>
                    <div class="player-song-details-container">
                        <h1 class="player-song-title">Track Name</h1>
                        <h2 class="player-song-details"> Artist - Album </h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="player-progress-controls">
            <div class="player-buttons space-between">
                <i class="fas fa-fast-backward"></i>
                <i class="fas fa-play"></i>
                <i class="fas fa-fast-forward"></i>
            </div>
            <div class="player-progress-container">
                <div class="line"></div>
            </div>
        </div>
        <div class="player-actions space-between">
            <div>
                <i class="fas fa-heart"></i>
            </div>
            <div>
                <i class="fas fa-plus-circle"></i>
            </div>
            <div>
                <i class="fas fa-share-alt"></i>
            </div>
        </div>
    </div>
</div>
