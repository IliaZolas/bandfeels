<div class="station-background">
    <div class="station-flex">
        <div>
            <%= render 'shared/verticalnavbar' %>
            <%= yield %>
        </div>
        <div class="create-album-area flex">
            <div class="left-div">
                <h1 class="new-album-heading">Add <span class="purple-heading">New Track</span></h1>
                <div class="album-image-new">
                <!-- Ruby code to insert image -->
                </div>
                <p class="new-album-text">When you have created an album, you will be able to upload your tracks and add details to them.</p>
            </div>
            <div class="right-div">
                <div class="album-form-area">
                    <!-- Ruby code for form -->
                    <h2>Add new track</h2>
                        <%= simple_form_for [@album, @track] do |f| %>
                        <%= f.input :title,
                                    required: true,
                                    autofocus: true,
                                    input_html: { autocomplete: "title" }%>
                        <%= f.input :description,
                                    required: true,
                                    autofocus: true,
                                    input_html: { autocomplete: "description" }%>
                        <%= f.input :photo,
                                    autofocus: true,
                                    as: :file %>
                        <%= f.input :track,
                                    autofocus: true,
                                    as: :file %>
                        <%= f.submit "CREATE", class: "btn btn-primary" %>
                        <% end %>
                </div>
            </div>
        </div>

        <div class="fullwidth-player fixed">
            <div class="player-details">
                <div>
                    <div class="flex">
                        <div class="image-player">
                            <img class="image-player" src="https://images.unsplash.com/photo-1531278520962-fcf47a2faea2?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=2989&q=80">
                        </div>
                        <div class="player-song-details-container">
                            <h1 class="player-song-title">Track Name</h1>
                            <h2 class="player-song-details"> Artist - Album </h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="player-progress-controls">
                <div class="player-buttons space-between">
                    <i class="fas fa-fast-backward"></i>
                    <i class="fas fa-play"></i>
                    <i class="fas fa-fast-forward"></i>
                </div>
                <div class="player-progress-container">
                    <div class="line"></div>
                </div>
            </div>
            <div class="player-actions space-between">
                <div>
                    <i class="fas fa-heart"></i>
                </div>
                <div>
                    <i class="fas fa-plus-circle"></i>
                </div>
                <div>
                    <i class="fas fa-share-alt"></i>
                </div>
            </div>
        </div>
    </div>
